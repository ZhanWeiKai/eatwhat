<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 相机权限（扫码功能） -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- 存储权限（选择图片） -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- 通知权限（Android 13+） -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- 振动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- 前台服务权限 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/sym_def_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/sym_def_app_icon"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.What2Eat">

        <!-- WebSocket前台服务 -->
        <service
            android:name=".service.WebSocketService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- 启动页（登录/注册） -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.What2Eat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主页 -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false" />

        <!-- 点菜页面 -->
        <activity
            android:name=".ui.menu.MenuActivity"
            android:exported="false" />

        <!-- 推送记录页面 -->
        <activity
            android:name=".ui.push.PushListActivity"
            android:exported="false"
            android:launchMode="singleTask" />

        <!-- 好友列表页面 -->
        <activity
            android:name=".ui.friend.FriendListActivity"
            android:exported="false" />

        <!-- 分类管理页面 -->
        <activity
            android:name=".ui.category.CategoryManageActivity"
            android:exported="false" />

        <!-- 二维码页面 -->
        <activity
            android:name=".ui.qrcode.QRCodeActivity"
            android:exported="false" />

        <!-- 扫描页面 -->
        <activity
            android:name=".ui.qrcode.ScanActivity"
            android:exported="false"
            android:theme="@style/Theme.What2Eat.NoActionBar" />

        <!-- 上传菜品页面 -->
        <activity
            android:name=".ui.upload.UploadActivity"
            android:exported="false" />

        <!-- 相册页面 -->
        <activity
            android:name=".ui.photo.PhotoActivity"
            android:exported="false" />

        <!-- 照片详情页面（大图查看） -->
        <activity
            android:name=".ui.photo.PhotoDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.What2Eat.NoActionBar"
            android:screenOrientation="unspecified" />

        <!-- 百度网盘授权页面 -->
        <activity
            android:name=".ui.photo.BaiduOAuthActivity"
            android:exported="false" />

        <!-- AI聊天页面 -->
        <activity
            android:name=".ui.ai.AIChatActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- FileProvider用于相机拍照 -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
